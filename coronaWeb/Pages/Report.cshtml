@page
@model ReportModel
@{
    ViewData["Title"] = "Reporte";
}
@section Head{
    <link href='https://fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css'>
    
    <link href="~/js/sweetalert/sweetalert.css" rel="stylesheet" />

    <link href="~/css/devExtreme/dx.common.css" rel="stylesheet" />
    <link href="~/css/devExtreme/dx.light.css" rel="stylesheet" />
    <style>
        .btn-purple {
            background-color: #9a186e !important;
            color: #ffffff !important;
            padding: 10px;
            border-radius: 10px;
            text-decoration: none !important;
            border-color: #9a186e !important;
        }

        .title {
            color: #9a186e !important;
            font-size: 33px;
            margin: 20px 0px 40px 0px;
        }

        a,
        .form-check-label {
            color: #9a186e !important;
            font-size: 18px;
            font-weight: bold;
        }

        .col-form-label {
            color: #9a186e !important;
            font-size: 25px;
            font-weight: bold;
            padding: 0px;
        }

        .form-control {
            border-color: #9a186e !important;
            border-radius: 10px !important;
        }

        .gamesContent {
            margin-top: 50px;
            background-image: url("../images/Logos/cerpentinas.png");
            background-size: contain; /* for IE9+, Safari 4.1+, Chrome 3.0+, Firefox 3.6+ */
            -webkit-background-size: contain; /* for Safari 3.0 - 4.0 , Chrome 1.0 - 3.0 */
            -moz-background-size: contain; /* optional for Firefox 3.6 */
            -o-background-size: contain; /* for Opera 9.5 */
            padding: 0; /* to remove the default white margin of body */
            background-repeat: no-repeat;
        }

        button {
            box-shadow: unset !important;
        }
    </style>
}
@section Scripts{
    @*<%--devExpress--%>*@
    <script src="~/js/devExtreme/jszip.min.js"></script>
    <script src="~/js/devExtreme/dx.all.js"></script>
    <script src="~/js/devExtreme/globalize.min.js"></script>
    <script src="~/js/devExtreme/cldr.min.js"></script>
    <script src="~/js/devExtreme/localization/dx.messages.es.js"></script>
    <script src="~/js/devExtreme/globalize/currency.min.js"></script>
    <script src="~/js/devExtreme/globalize/date.min.js"></script>
    <script src="~/js/devExtreme/globalize/message.min.js"></script>
    <script src="~/js/devExtreme/globalize/number.min.js"></script>
    <script src="~/js/sweetalert/sweetalert.js"></script>


    @*app js*@
    <script src="~/js/app/report.js?rnd=05"></script>
    <script type="text/javascript">$(function () {
            preinit();
        });</script>
}
<!--begin::Row-->

<div id="loginpanel" class="row gamesContent">
    <div class="col-xl-6 col-xxl-4">
        <img style="max-width:100%" src="~/images/Logos/logo-remodela.png?rdn=1">
        <br />
       &nbsp;
    </div>
    <div class="col-xl-6 col-xxl-4" style="padding-top: 40px;padding-left: 0px;padding-right: 20px;">
        <form class="form validateForm">
            <div class="card-body">
                <div class="mb-15">
                    <div class="form-group row">
                        <label class="col-lg-5 col-form-label text-right">Usuario </label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control required" data-bind="value: user" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-5 col-form-label text-right">Contraseña </label>
                        <div class="col-lg-6">
                            <input type="password" class="form-control required" data-bind="value: pwd" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-5">
                            &nbsp;
                        </div>
                        <div class="col-lg-6 text-right">
                            <button type="button" class="btn btn-success btn-purple " data-bind="click: login">Ingresar</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<div id="reportpanel" class="row" style="display: none;">
    <div class="row" style="margin-bottom: 50px;">
        <div class="col-md-10 row" style="margin: auto;">
            <div class="col-md-6" style="margin: auto;">
                <img style="width:250px;" src="~/images/Logos/logo-remodela.png?rdn=1" />
            </div>
            
        </div>
    </div>
    <br><br>
    <div class="col-xl-12 pt-20">
        <div class="hk-sec-wrapper">
            <div class="row">
                <div class="col-sm">
                    <div class="table-wrapper">
                        <div id="datatable1_wrapper" class="datatable_wrapper no-footer">
                            <div id="report" class="datatable_filter">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end::Row-->
